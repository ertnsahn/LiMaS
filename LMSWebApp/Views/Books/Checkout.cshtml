@model LMSWebApp.Models.ViewModels.CheckOutModel
@{
    ViewData["Title"] = "Check out";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Books
            <small>@ViewData["Title"]</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="~/books">Books</a></li>
            <li class="active">@ViewData["Title"]</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">@ViewData["Title"]</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post">
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.PersonName">Person name</label>
                                        <input type="text" class="form-control" asp-for="@Model.PersonName" placeholder="Enter Person name">
                                        <span asp-validation-for="PersonName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.MobileNumber">Mobile number</label>
                                        <input type="text" class="form-control" asp-for="@Model.MobileNumber" data-inputmask="'mask': ['999-999-99-99']" data-mask placeholder="Enter Mobile number">
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.NationalID">National ID</label>
                                        <input type="text" min="11" maxlength="11" class="form-control" data-inputmask="'mask': ['99999999999']" data-mask asp-for="@Model.NationalID" placeholder="Enter National ID">
                                        <span asp-validation-for="NationalID" class="text-danger"></span>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.CheckoutDate">Checkout Date</label>
                                        <input id="CheckoutDate" type="date" class="form-control" asp-for="@Model.CheckoutDate" placeholder="Enter Checkout Date">
                                        <span asp-validation-for="CheckoutDate" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.ReturnDate">Return Date</label>
                                        <input id="ReturnDate" type="date" class="form-control" asp-for="@Model.ReturnDate" placeholder="Enter Return Date">
                                        <span asp-validation-for="ReturnDate" class="text-danger"></span>

                                    </div>
                                </div>
                                <div hidden class="col-md-6">
                                    <input asp-for="@Model.BookId" />

                                </div>

                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <a href="~/books" class="btn btn-danger">Cancel</a>
                            <button type="submit" class="btn btn-primary pull-right">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section scripts{
    <script src="~/lib/input-mask/jquery.inputmask.js"></script>
    <script>
        function setSecondDate() {
            var days = 15;
            var date = new Date(document.getElementById("CheckoutDate").value);
            //date.setDate(date.getDate() + parseInt(days));
            document.getElementById("ReturnDate").valueAsDate = addWorkDays(date, days);
        }

        function addWorkDays(startDate, days) {
            if (isNaN(days)) {
                return
            }
            if (!(startDate instanceof Date)) {
                return
            }
            var dow = startDate.getDay();
            var daysToAdd = parseInt(days);
            if (dow == 0)
                daysToAdd++;
            if (dow + daysToAdd >= 6) {
                var remainingWorkDays = daysToAdd - (5 - dow);
                daysToAdd += 2;
                if (remainingWorkDays > 5) {
                    daysToAdd += 2 * Math.floor(remainingWorkDays / 5);
                    if (remainingWorkDays % 5 == 0)
                        daysToAdd -= 2;
                }
            }
            startDate.setDate(startDate.getDate() + daysToAdd);
            return startDate;
        }


        $(document).ready(function () {
            $('[data-mask]').inputmask();
            document.getElementById("CheckoutDate").valueAsDate = new Date();
            setSecondDate();

            $("#CheckoutDate").change(function () {
                setSecondDate()
            });
        });

    </script>
}